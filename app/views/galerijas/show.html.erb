<h1 class="text-3xl font-bold mb-4">Galerija</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
  <% if @galerija.images.attached? %>
    <% @galerija.images.each do |image| %>
      <div>
        <%= image_tag image.variant(resize_to_limit: [600,400]), class: "w-full rounded shadow" %>
      </div>
    <% end %>
  <% else %>
    <p>Ni slik v galeriji.</p>
  <% end %>
</div>

<%= link_to "Nazaj na galerije", galerijas_path, class: "mt-4 inline-block bg-gray-600 text-white px-4 py-2 rounded" %>
