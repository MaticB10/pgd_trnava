<h1 class="text-3xl font-bold mb-4">Galerija</h1>

<% if user_signed_in? %>
  <%= link_to "NaloÅ¾i novo galerijo", new_galerija_path, class: "bg-blue-600 text-white px-4 py-2 rounded" %>
<% end %>

<% if @galerijas.any? %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
    <% @galerijas.each do |galerija| %>
      <div class="bg-white rounded shadow p-4">
        <% if galerija.images.attached? %>
          <%= link_to image_tag(galerija.images.first.variant(resize_to_fill: [300,200]), class: "w-full rounded"), galerija_path(galerija) %>
        <% else %>
          <p>Ni slik.</p>
        <% end %>
        <p class="mt-2"><%= truncate(galerija.description, length: 50) %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <p>Ni galerij.</p>
<% end %>
