<h1 class="text-3xl font-bold mb-4">Galerija</h1>

<% if user_signed_in? %>
  <%= link_to "NaloÅ¾i novo galerijo", new_galerija_path, class: "bg-blue-600 text-white px-4 py-2 rounded" %>
<% end %>

<% if @galerijas.any? %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
    <% @galerijas.each do |galerija| %>
      <div>
        <p><%= galerija.description %></p>
        <% if galerija.images.attached? %>
          <% galerija.images.each do |img| %>
            <%= image_tag img.variant(resize_to_limit: [300,200]), class: "rounded" %>
          <% end %>
        <% else %>
          <p>Ni slik.</p>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <p>Ni galerij.</p>
<% end %>
