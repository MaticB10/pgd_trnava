<%= form_with(model: intervencija, class: "contents") do |form| %>
  <% if intervencija.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(intervencija.errors.count, "error") %> prohibited this intervencija from being saved:</h2>

      <ul class="list-disc ml-6">
        <% intervencija.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :datum %>
    <%= form.datetime_field :datum, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": intervencija.errors[:datum].none?, "border-red-400 focus:outline-red-600": intervencija.errors[:datum].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :lokacija %>
    <%= form.text_field :lokacija, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": intervencija.errors[:lokacija].none?, "border-red-400 focus:outline-red-600": intervencija.errors[:lokacija].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :tip %>
    <%= form.text_field :tip, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": intervencija.errors[:tip].none?, "border-red-400 focus:outline-red-600": intervencija.errors[:tip].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :kratek_opis %>
    <%= form.textarea :kratek_opis, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": intervencija.errors[:kratek_opis].none?, "border-red-400 focus:outline-red-600": intervencija.errors[:kratek_opis].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :podrobnejsi_opis %>
    <%= form.textarea :podrobnejsi_opis, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": intervencija.errors[:podrobnejsi_opis].none?, "border-red-400 focus:outline-red-600": intervencija.errors[:podrobnejsi_opis].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
