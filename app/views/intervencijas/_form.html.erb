<%# Add the embedded CSS in a style block. This will override any default styles. %>
<% content_for :head do %>
  <style>
    /* Container for the form */
    .contents {
      max-width: 600px;
      margin: 0 auto;
      padding: 1rem;
    }

    /* Error explanation box */
    #error_explanation {
      background-color: #fef2f2; /* light red background */
      color: #dc2626;           /* red text */
      padding: 1rem;
      font-weight: 500;
      border-radius: 0.375rem;
      margin-top: 1rem;
    }

    /* Spacing for form groups */
    .my-5 {
      margin: 1.25rem 0;
    }

    /* Label styling */
    label {
      display: block;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    /* Input, textarea, and file field styling */
    input[type="text"],
    input[type="datetime-local"],
    textarea,
    input[type="file"] {
      display: block;
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #d1d5db; /* gray border */
      border-radius: 0.375rem;
      box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
      transition: border-color 0.2s ease;
    }
    input[type="text"]:focus,
    input[type="datetime-local"]:focus,
    textarea:focus,
    input[type="file"]:focus {
      outline: none;
      border-color: #2563eb; /* blue border on focus */
    }

    /* Submit button styling */
    input[type="submit"],
    button[type="submit"] {
      background-color: #2563eb;
      color: #fff;
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: 0.375rem;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }
    input[type="submit"]:hover,
    button[type="submit"]:hover {
      background-color: #1e40af;
    }

    /* Utility class for inline elements */
    .inline {
      display: inline-block;
    }
  </style>
<% end %>

<%# Begin the form %>
<%= form_with(model: intervencija, class: "contents") do |form| %>
  <% if intervencija.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(intervencija.errors.count, "error") %> prohibited this intervencija from being saved:</h2>
      <ul>
        <% intervencija.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Datum Field -->
  <div class="my-5">
    <%= form.label :datum %>
    <%= form.datetime_field :datum %>
  </div>

  <!-- Lokacija Field -->
  <div class="my-5">
    <%= form.label :lokacija %>
    <%= form.text_field :lokacija %>
  </div>

  <!-- Tip Field -->
  <div class="my-5">
    <%= form.label :tip %>
    <%= form.text_field :tip %>
  </div>

  <!-- Kratek opis Field -->
  <div class="my-5">
    <%= form.label :kratek_opis %>
    <%= form.textarea :kratek_opis, rows: 4 %>
  </div>

  <!-- Podrobnejsi opis Field -->
  <div class="my-5">
    <%= form.label :podrobnejsi_opis %>
    <%= form.textarea :podrobnejsi_opis, rows: 4 %>
  </div>

  <!-- New field: Attach Images -->
  <div class="my-5">
    <%= form.label :images, "Attach Images" %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <!-- Submit Button -->
  <div class="inline">
    <%= form.submit %>
  </div>
<% end %>
