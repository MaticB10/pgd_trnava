<%# app/views/intervencijas/_form.html.erb %>

<!-- Custom CSS Styles -->
<style>
  /* Container for the form */
  .form-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
  }

  /* Error explanation styling */
  .error-explanation {
    background-color: #fee2e2;
    color: #b91c1c;
    padding: 1rem;
    border-radius: 0.375rem;
    margin-bottom: 1.25rem;
  }

  .error-explanation h2 {
    margin-top: 0;
    font-weight: bold;
  }

  .error-explanation ul {
    margin-left: 1.5rem;
    list-style-type: disc;
  }

  /* Form group spacing */
  .form-group {
    margin-bottom: 1.25rem; /* 20px */
  }

  /* Label styling */
  .form-label {
    display: block;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  /* Input and textarea styling */
  .form-input,
  .form-textarea {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #ccc;
    border-radius: 0.375rem;
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
    transition: border-color 0.3s ease;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: #2563eb; /* blue on focus */
  }

  /* Error state for inputs */
  .form-error {
    border-color: #f87171; /* red */
  }

  .form-error:focus {
    border-color: #dc2626;
  }

  /* Submit button styling */
  .form-submit {
    background-color: #2563eb;
    color: #fff;
    padding: 0.625rem 1rem;
    border: none;
    border-radius: 0.375rem;
    cursor: pointer;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .form-submit:hover {
    background-color: #1d4ed8;
  }
</style>

<%# Begin the form %>
<%= form_with(model: intervencija, class: "contents") do |form| %>
  <% if intervencija.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(intervencija.errors.count, "error") %> prohibited this intervencija from being saved:</h2>
      <ul class="list-disc ml-6">
        <% intervencija.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Other fields like datum, lokacija, etc. -->
  <div class="my-5">
    <%= form.label :datum %>
    <%= form.datetime_field :datum, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :lokacija %>
    <%= form.text_field :lokacija, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :tip %>
    <%= form.text_field :tip, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :kratek_opis %>
    <%= form.textarea :kratek_opis, rows: 4, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :podrobnejsi_opis %>
    <%= form.textarea :podrobnejsi_opis, rows: 4, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
  </div>

  <!-- New field: Images -->
  <div class="my-5">
    <%= form.label :images, "Attach Images" %>
    <%= form.file_field :images, multiple: true, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
