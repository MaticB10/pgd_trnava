<%# app/views/intervencijas/_form.html.erb %>

<!-- Custom CSS Styles -->
<style>
  /* Container for the form */
  .form-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
  }

  /* Error explanation styling */
  .error-explanation {
    background-color: #fee2e2;
    color: #b91c1c;
    padding: 1rem;
    border-radius: 0.375rem;
    margin-bottom: 1.25rem;
  }

  .error-explanation h2 {
    margin-top: 0;
    font-weight: bold;
  }

  .error-explanation ul {
    margin-left: 1.5rem;
    list-style-type: disc;
  }

  /* Form group spacing */
  .form-group {
    margin-bottom: 1.25rem; /* 20px */
  }

  /* Label styling */
  .form-label {
    display: block;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  /* Input and textarea styling */
  .form-input,
  .form-textarea {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #ccc;
    border-radius: 0.375rem;
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
    transition: border-color 0.3s ease;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: #2563eb; /* blue on focus */
  }

  /* Error state for inputs */
  .form-error {
    border-color: #f87171; /* red */
  }

  .form-error:focus {
    border-color: #dc2626;
  }

  /* Submit button styling */
  .form-submit {
    background-color: #2563eb;
    color: #fff;
    padding: 0.625rem 1rem;
    border: none;
    border-radius: 0.375rem;
    cursor: pointer;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .form-submit:hover {
    background-color: #1d4ed8;
  }
</style>

<%# Begin the form %>
<%= form_with(model: intervencija, html: { class: "form-container" }) do |form| %>
  <% if intervencija.errors.any? %>
    <div id="error_explanation" class="error-explanation">
      <h2><%= pluralize(intervencija.errors.count, "error") %> prohibited this intervencija from being saved:</h2>
      <ul>
        <% intervencija.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :datum, class: "form-label" %>
    <%= form.datetime_field :datum, class: "form-input #{'form-error' if intervencija.errors[:datum].any?}" %>
  </div>

  <div class="form-group">
    <%= form.label :lokacija, class: "form-label" %>
    <%= form.text_field :lokacija, class: "form-input #{'form-error' if intervencija.errors[:lokacija].any?}" %>
  </div>

  <div class="form-group">
    <%= form.label :tip, class: "form-label" %>
    <%= form.text_field :tip, class: "form-input #{'form-error' if intervencija.errors[:tip].any?}" %>
  </div>

  <div class="form-group">
    <%= form.label :kratek_opis, class: "form-label" %>
    <%= form.textarea :kratek_opis, rows: 4, class: "form-textarea #{'form-error' if intervencija.errors[:kratek_opis].any?}" %>
  </div>

  <div class="form-group">
    <%= form.label :podrobnejsi_opis, class: "form-label" %>
    <%= form.textarea :podrobnejsi_opis, rows: 4, class: "form-textarea #{'form-error' if intervencija.errors[:podrobnejsi_opis].any?}" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "form-submit" %>
  </div>
<% end %>
