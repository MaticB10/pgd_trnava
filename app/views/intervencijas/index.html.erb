<% content_for :title, "Intervencijas" %>

<div class="container mx-auto px-4 py-8">
  <% if notice.present? %>
    <div class="mb-6">
      <p id="notice" class="py-3 px-4 bg-green-50 text-green-600 font-semibold rounded shadow">
        <%= notice %>
      </p>
    </div>
  <% end %>

  <div class="flex items-center justify-between mb-8">
    <h1 class="text-4xl font-bold text-gray-800">Intervencijas</h1>
    <% if user_signed_in? %>
      <%= link_to "New Intervencija", new_intervencija_path, class: "px-5 py-3 bg-blue-600 text-white rounded hover:bg-blue-500 transition" %>
    <% end %>
  </div>

  <div id="intervencijas" class="grid grid-cols-1 gap-6">
    <% if @intervencijas.any? %>
      <% @intervencijas.each do |intervencija| %>
        <div class="bg-white p-6 rounded shadow hover:shadow-lg transition">
          <div class="mb-4">
            <!-- Render a partial for the intervencija card details -->
            <%= render intervencija %>
          </div>
          <div class="flex flex-col sm:flex-row sm:justify-end sm:space-x-4 space-y-2 sm:space-y-0">
            <%= link_to "Show", intervencija, class: "px-4 py-2 bg-gray-100 text-gray-800 rounded hover:bg-gray-200 transition" %>
            <% if user_signed_in? %>
              <%= link_to "Edit", edit_intervencija_path(intervencija), class: "px-4 py-2 bg-yellow-100 text-yellow-800 rounded hover:bg-yellow-200 transition" %>
              <%= button_to "Destroy", intervencija, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-500 transition" %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center text-gray-500 mt-10">No intervencijas found.</p>
    <% end %>
  </div>
</div>
