<% content_for :title, "Intervencijas" %>

<div class="container">
  <% if notice.present? %>
    <div class="notice">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>

  <div class="header">
    <h1>Intervencijas</h1>
    <% if user_signed_in? %>
      <%= link_to "New Intervencija", new_intervencija_path, class: "btn btn-new" %>
    <% end %>
  </div>

  <div id="intervencijas" class="intervencijas-grid">
    <% if @intervencijas.any? %>
      <% @intervencijas.each do |intervencija| %>
        <div class="card">
          <div class="card-body">
            <%= render intervencija %>
          </div>
          <div class="card-actions">
            <%= link_to "Show", intervencija, class: "btn btn-show" %>
            <% if user_signed_in? %>
              <%= link_to "Edit", edit_intervencija_path(intervencija), class: "btn btn-edit" %>
              <%= button_to "Destroy", intervencija, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-destroy" %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="no-intervencijas">No intervencijas found.</p>
    <% end %>
  </div>
</div>

<!-- CSS Styling -->
<style>
  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  /* Notice Message */
  .notice p {
    padding: 10px 15px;
    background-color: #e6f7e6;
    color: #2d882d;
    border: 1px solid #b2e2b2;
    border-radius: 4px;
    margin-bottom: 20px;
  }

  /* Header */
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .header h1 {
    font-size: 2.5rem;
    color: #333;
  }

  /* Button Base Style */
  .btn {
    padding: 10px 15px;
    text-decoration: none;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 600;
    transition: opacity 0.3s ease;
  }

  .btn:hover {
    opacity: 0.9;
  }

  /* Specific Buttons */
  .btn-new {
    background-color: #007bff;
    color: #fff;
  }

  .btn-show {
    background-color: #f0f0f0;
    color: #333;
  }

  .btn-edit {
    background-color: #ffc107;
    color: #333;
  }

  .btn-destroy {
    background-color: #dc3545;
    color: #fff;
  }

  /* Grid for Intervencijas */
  .intervencijas-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  /* Card Styles */
  .card {
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 20px;
    transition: box-shadow 0.3s ease;
  }

  .card:hover {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  /* Card Actions */
  .card-actions {
    margin-top: 15px;
    display: flex;
    gap: 10px;
  }

  /* Message for No Intervencijas */
  .no-intervencijas {
    text-align: center;
    color: #888;
    margin-top: 30px;
  }
</style>
