<h1>Admin Dashboard - Pending Users</h1>

<% if @pending_users.any? %>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Username</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @pending_users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.username %></td>
          <td>
            <!-- Approve or Reject links/buttons -->
            <%= button_to 'Approve', approve_admin_user_path(user), method: :patch %>
            <%= button_to 'Reject',  reject_admin_user_path(user),  method: :patch %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No pending users.</p>
<% end %>
