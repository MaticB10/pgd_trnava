<h1>Admin Dashboard - Pending Users</h1>

<% if @pending_users.any? %>
  <ul>
    <% @pending_users.each do |user| %>
      <li>
        <%= user.username %> - <%= user.email %>
        <%= button_to "Approve", approve_admin_user_path(user), method: :patch, class: "btn btn-green" %>
        <%= button_to "Reject", reject_admin_user_path(user), method: :patch, class: "btn btn-red", data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No pending users.</p>
<% end %>
