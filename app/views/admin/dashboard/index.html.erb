<h1 class="text-3xl font-bold mb-8 text-center text-gray-800">Admin Dashboard - Pending Users</h1>

<% if @pending_users.any? %>
  <div class="overflow-x-auto bg-white shadow-md rounded-lg p-4">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Username</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @pending_users.each do |user| %>
          <tr class="hover:bg-gray-100 transition-colors">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= user.email %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= user.username %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
              <%= button_to 'Approve', approve_admin_user_path(user), method: :patch, class: "inline-flex items-center px-4 py-2 border border-transparent text-xs font-semibold rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
              <%= button_to 'Reject', reject_admin_user_path(user), method: :patch, class: "inline-flex items-center px-4 py-2 border border-transparent text-xs font-semibold rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="text-center mt-10 text-lg text-gray-500">No pending users.</p>
<% end %>
